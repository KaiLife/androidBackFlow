<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.ytxu.androidbackflow.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_btn_4_requedst_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="request activity"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/main_btn_4_requedst_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="request fragment"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/main_btn_4_requedst_activity_and_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="request activity and fragment"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/main_btn_4_multi_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="jump to multi process"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/main_btn_4_multi_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="jump to multi task"
            android:textAllCaps="false"
            android:textColor="@android:color/tertiary_text_light" />

        <Button
            android:id="@+id/main_btn_4_multi_task_and_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="jump to multi task and process"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>
</ScrollView>

