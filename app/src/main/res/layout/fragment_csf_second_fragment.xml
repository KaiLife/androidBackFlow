<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sample.fragments.fragment_contains_sub_fragment.second_level.FCSFSecondFragment">

    <TextView
        android:id="@+id/fcsf2_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/fcsf2_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="request back flow"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/fcsf2_finish_task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="finish_task"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark" />
</LinearLayout>
