<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.ytxu.androidbackflow.sample.request_fragment.BaseLetterFragment">

    <TextView
        android:id="@+id/letter_tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/letter_jump_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="jump to next fragment activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/letter_back_flow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="rollback flow fragment"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/letter_finish_task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="finish_task"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_red_dark" />
</LinearLayout>
